


<section class="container">
    <div class="col-9">
      <div class="content-header">
        <h2 class="content-title mt-4">Offer</h2>
      </div>
    </div>
    <div class="row">
      <div class=" d-flex"><a href="/admin/addoffer" class="btn btn-success ms-auto">Add Offer</a></div>
<p style="font-weight:500;" class="mt-2 mr-2 text-end " >Delete Category wise  <a href="/admin/deactivateCategoryOffer">click here</a>  </p>

    </div>
  
    <div class="mt-4">
        <table class="table table-hover" id="productsTable">
            <thead> 
              <tr>
                <th>Product Offer</th>
                <th>Offer Price</th>
                <th>Category</th>
                <th>Deactivate Offer</th>
              </tr>
            </thead>
            <tbody>

                <% products.forEach((products)=> { %>
                    <% if(products.offer>0){%>

              <tr>
                <td ><%=products.name%></td>
                
                <td ><%=products.offer%></td>
                <td><%=products.category%></td>
    
                <td class="">
                  <a href="/admin/deactivateProOffer/<%=products._id%>"   class="btn btn-sm btn-danger " >Delete Offer</a>

                </td>
              </tr>
              <% }%> 


              <% }) %> 

              
             
            </tbody>
            
          </table>
    </div>

  
  
    
</section>
<br>
  
  <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>
  <script>
      $(document).ready( function () {
        $('#productsTable').DataTable();
    } );
  </script>