<section class="content-main">
  <div class="row">
    <div class="col-9">
      <div class="content-header">
        <h2 class="content-title">Add Banner</h2>
      </div>
    </div>
    <div class="col-lg-11">
      <div class="card mb-4">
        <div class="card-body">
          <form class="mx-1 mx-md-4 pt-5" action="/admin/addbanner" method="post" id="banner-form"  enctype="multipart/form-data" >
            <div class="row">
              <div class="col-md-6">
                <div class="mb-4">
                  <label for="product_category_1" class="form-label">Title</label>
                  <input type="text" placeholder="Banner Title" required name="title" class="form-control" id="title">
                </div>
                <div class="mb-4">
                  <label for="product_category_3" class="form-label">Subtitle</label>
                  <input type="text" placeholder="Banner Subtitle" required name="subtitle" class="form-control"
                    id="subtitle">
                </div>
              </div>
              <div class="col-md-6">
                <div class="card mt-4">
                  <div class="card-header">
                    <h5 class="mb-1">Media</h5>
                  </div>
                  <div class="card-body">
                    <div class="input-upload">
                      <input class="form-control" name="image" type="file" required>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
              <input type="submit" style="border-radius: 1rem;" class="btn btn-primary btn-lg" />
            </div>
          </form>
          
          
          <script>
            $(document).ready(function () {
              $("#banner-form").validate({
                rules: {
                  title: {
                    required: true,
                    minlength: 4,
                  },
                  subtitle: {
                    required: true,
                  },
                  image : {
                    required : true,
                  }
                },
                messages: {
                  title: {
                    required: "Please enter a valid banner title.",
                    minlength: "Title must be atleast 4 characters long.",
                  },
                  subtitle: {
                    required: "Please enter one subtitle"
                  },
                  image :{
                    requierd: "Please select banner images",
          
                  }
                },
                errorClass: "text-danger",
              });
            });
          </script>

          
        </div>
      </div>

<a href="/admin/viewbanner" style="font-weight:500;"> View all banners</a>

</section>