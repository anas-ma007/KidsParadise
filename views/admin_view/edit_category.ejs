<section class="content-main">
  <div class="row">
    <div class="col-9">
      <div class="content-header">
        <h2 class="content-title">Edit Category</h2>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="card mb-4">
        <div class="card-body">
          <form class="mx-1 mx-md-4 pt-5" action="/admin/editcategory" method="post">

            <div class="mb-4">
              <label for="product_category" class="form-label" value="<%=category?.category%>"></label>
              <input type="text" placeholder="Product Category" required name="category" class="form-control"
                id="category">
            </div>



            <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
              <input type="submit" style="border-radius: 1rem;" class="btn btn-primary btn-lg" />
            </div>

          </form>
        </div>
      </div>


      <!-- card-header end -->
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Categories</th>
                <th>Status</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% for(var i=0; i < category.length; i++) { %>
                <tr>
                  <td>
                    <%= category[i].category %>
                  </td>
                  <td>
                    <% if ( category[i].status ) { %>
                      <span class="badge rounded-pill alert-danger">Inactive</span>
                      <% } else { %>
                        <span class="badge rounded-pill alert-success">Active</span>
                        <% } %>
                  </td>
                  <td>
                   
                    <% if (category[i].status) { %>
                      <a href="/admin/unlist_category/<%=category[i]._id%>" class="btn btn-danger"> List</a> 
                    <% } else { %>
                      <a href=" /admin/list_category/<%=category[i]._id%>" class="btn btn-success"> Unlist</a>
                      <% } %>
                  </td>
                </tr>
                <% } %>
            </tbody>
          </table>
        </div>
      </div>
</section>