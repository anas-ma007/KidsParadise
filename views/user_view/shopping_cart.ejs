<style>
	.empty-cart {
		width: 50vw;
		margin: 0 auto;
		text-align: center;
		font-family: 'Maison Neue';
		font-weight: 300;
	}

	svg {
		max-width: 60%;
		padding: 5rem 3rem;
	}

	#oval,
	#plus,
	#diamond,
	#bubble-rounded {
		animation: plopp 4s ease-out infinite;
	}

	#oval:nth-child(1),
	#plus:nth-child(2),
	#diamond:nth-child(3),
	#bubble-rounded:nth-child(4),
	#oval:nth-child(5),
	#plus:nth-child(6),
	#diamond:nth-child(7),
	#bubble-rounded:nth-child(8),
	#oval:nth-child(9),
	#plus:nth-child(10),
	#diamond:nth-child(11),
	#bubble-rounded:nth-child(12),
	#oval:nth-child(13),
	#plus:nth-child(14),
	#diamond:nth-child(15),
	#bubble-rounded:nth-child(16) {
		animation-delay: -240ms;
	}

	#oval:nth-child(2),
	#plus:nth-child(4),
	#diamond:nth-child(6),
	#bubble-rounded:nth-child(8),
	#oval:nth-child(10),
	#plus:nth-child(12),
	#diamond:nth-child(14),
	#bubble-rounded:nth-child(16) {
		animation-delay: -480ms;
	}

	#bg-line:nth-child(2) {
		fill-opacity: 0.3;
	}

	#bg-line:nth-child(3) {
		fill-opacity: 0.4;
	}

	@keyframes plopp {
		0% {
			transform: translate(0, 0);
			opacity: 1;
		}

		100% {
			transform: translate(0, -10px);
			opacity: 0;
		}
	}

	h3 {
		font-size: 2rem;
		line-height: 2rem;
		margin: 0;
		padding: 0;
		font-weight: 600;
	}

	p {
		color: rgba(0, 0, 0, 0.5);
		font-size: 18px;
		line-height: 24px;
		max-width: 80%;
		margin: 1.25rem auto 0 auto;
	}

	body {
		background: #f2f2f2;
	}
</style>



