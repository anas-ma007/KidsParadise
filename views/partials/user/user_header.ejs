<!-- Header -->
<header>
    <!-- Header desktop -->
    <div class="container-menu-desktop">

        <div class="wrap-menu-desktop">
            <nav class="limiter-menu-desktop container">

                <!-- Logo desktop -->
                <a href="/" class="logo">
                    <img src="/user_assets/images/icons/logo-01.png" alt="IMG-LOGO">
                </a>

                <!-- Menu desktop -->
                <div class="menu-desktop">
                    <ul class="main-menu">
                        <li class="">
                            <a href="/">Home</a>
                        </li>

                        <li>
                            <a href="/allproducts">Shop</a>
                        </li>


                        <li>
                            <a href="/orders">My Orders</a>
                        </li>


                    </ul>
                </div>

                <!-- Icon header -->
                <div class="wrap-icon-header flex-w flex-r-m">

                    <% if ( locals.user ) { %>
                        <a href="/cart">
                            <div id="cartTcount">
                                <div id="cart_count" href=""
                                    class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 icon-header-noti"
                                    data-notify="<%= locals.cartCount %>">
                                    <i class="zmdi zmdi-shopping-cart"></i>
                                </div>
                            </div>
                        </a>
                        <% } else { %>
                            <a href="/cart">
                                <div href="" class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 ">
                                    <i class="zmdi zmdi-shopping-cart"></i>
                                </div>
                            </a>
                            <% } %>
                                <ul>
                                    <li>



                                        <% if ( locals.user ) { %>
                                            <div class="dropdown">
                                                <a href="" class="m-l-20 dropdown-toggle text-dark"
                                                    style="font-family: Georgia, 'Times New Roman', Times, serif;"
                                                    data-toggle="dropdown">
                                                    <%= locals.user.name %>
                                                </a>
                                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                                    <a class="dropdown-item" href="/userprofile/<%=user._id%>"> My
                                                        Profile</a>
                                                    <a class="dropdown-item" href="/logout">Logout</a>
                                                </div>
                                            </div>
                                            <% } else { %>
                                                <div class="dropdown">
                                                    <button class="btn btn-dark btn-sm m-l-20  dropdown-toggle"
                                                        type="button" id="dropdownMenuButton" data-toggle="dropdown"
                                                        aria-haspopup="true" aria-expanded="false">
                                                        Account
                                                    </button>
                                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                                        <a class="dropdown-item" href="/login">Login</a>
                                                        <a class="dropdown-item" href="/signup">Signup</a>
                                                    </div>
                                                </div>
                                         <% } %>
                                    </li>
                                </ul>
                </div>
            </nav>
        </div>
    </div>

    <!-- Header Mobile -->
    <div class="wrap-header-mobile">
        <!-- Logo moblie -->
        <div class="logo-mobile">
            <a href="/"><img src="/user_assets/images/icons/logo-01.png" alt="IMG-LOGO"></a>
        </div>

        <!-- Icon header -->
        <div class="wrap-icon-header flex-w flex-r-m m-r-15">
           


            <% if ( locals.user ) { %>
                <a href="/cart">
                    <div id="cartTcount">
                        <div id="cart_count" href=""
                            class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 icon-header-noti"
                            data-notify="<%= locals.cartCount %>">
                            <i class="zmdi zmdi-shopping-cart"></i>
                        </div>
                    </div>
                </a>
                <% } else { %>
                    <a href="/cart">
                        <div href="" class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 ">
                            <i class="zmdi zmdi-shopping-cart"></i>
                        </div>
                    </a>
                    <% } %>
                    <ul>
                        <li>



                            <% if ( locals.user ) { %>
                                <div class="dropdown">
                                    <a href="" class="m-l-20 dropdown-toggle text-dark"
                                        style="font-family: Georgia, 'Times New Roman', Times, serif;"
                                        data-toggle="dropdown">
                                        <%= locals.user.name %>
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <a class="dropdown-item" href="/userprofile/<%=user._id%>"> My
                                            Profile</a>
                                        <a class="dropdown-item" href="/logout">Logout</a>
                                    </div>
                                </div>
                                <% } else { %>
                                    <div class="dropdown">
                                        <button class="btn btn-dark btn-sm m-l-20  dropdown-toggle"
                                            type="button" id="dropdownMenuButton" data-toggle="dropdown"
                                            aria-haspopup="true" aria-expanded="false">
                                            Account
                                        </button>
                                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                            <a class="dropdown-item" href="/login">Login</a>
                                            <a class="dropdown-item" href="/signup">Signup</a>
                                        </div>
                                    </div>
                             <% } %>
                        </li>
                    </ul>

                <!-- <div class="icon-header-item cl2 hov-cl1 trans-04 p-r-11 p-l-10 icon-header-noti js-show-cart"
                    data-notify="2">
                    <i class="zmdi zmdi-shopping-cart"></i>
                </div> -->


        </div>

        <!-- Button show menu -->
        <div class="btn-show-menu-mobile hamburger hamburger--squeeze">
            <span class="hamburger-box">
                <span class="hamburger-inner"></span>
            </span>
        </div>
    </div>


    <!-- Menu Mobile -->
    <div class="menu-mobile">


        <ul class="main-menu-m">
            <li>
                <a href="/">Home</a>

            </li>

            <li>
                <a href="/allproducts">Our Products</a>
            </li>

            <li>
                <a href="/orders">My Orders</a>
            </li>


        </ul>
    </div>

   
</header>